@model UberFood.Web.ViewsModel.Users.UsersCreateOrUpdateViewModel;
@{
    ViewData["Title"] = "Édition d'utilisateur";
}

<h1>Édition d'utilisateur</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mail" class="control-label"></label>
                <input asp-for="Mail" class="form-control" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
           
            <fieldset>
                <legend>Adresse</legend>
                <div class="form-group">
                    <label asp-for="Adresse.Street"></label>
                    <input asp-for="Adresse.Street" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Adresse.City"></label>
                    <input asp-for="Adresse.City" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Adresse.State"></label>
                    <input asp-for="Adresse.State" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Adresse.Zip"></label>
                    <input asp-for="Adresse.Zip" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Adresse.Country"></label>
                    <input asp-for="Adresse.Country" class="form-control" />
                </div>
            </fieldset>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Annuler</a>
            </div>
        </form>

    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
</div>>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
