@model IEnumerable<UberFood.Web.ViewsModel.Ingredients.IngredientsViewModel>

@{
    ViewData["Title"] = "Liste des ingredients";
}

<h1>Liste des ingredients</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KCal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KCal)
            </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Détails</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Supprimer</a>
                </td>
        </tr>
}
    </tbody>
</table>
