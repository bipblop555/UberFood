
@model UberFood.Web.ViewsModel.Order.OrderDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>OrderDetailsViewModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DeliveryDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DeliveryDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.OrderProducts)
        </dt>

            @if (Model.OrderProducts != null )
            {
            <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(o => o.OrderProducts.First().ProductName)</th>
                            <th>@Html.DisplayNameFor(o => o.OrderProducts.First().ProductPrice)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.OrderProducts)
                        { 
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => product.ProductName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => product.ProductPrice)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
                
            
           
        
        
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>
